 <%= f.collection_select :approaches, Squirreltwo.select(:approaches).distinct, :id, :approaches %><br><br>

   <%= f.label :indifferent %>
 <%= f.collection_select :indifferent, Squirreltwo.select(:indifferent).distinct, :id, :indifferent %><br><br>



<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>


<%= form_for @squirreltwo do |f| %>
  <%= f.label :user_id %> #default to current user<br><br>

  <%= f.label :park_id %>
  <%= f.collection_select :park, Park.all, :id, :hectare %><br><br>

  <%= f.label :date %>
  <%= f.text_field :date%><br><br>


   <%= f.label :color %>
  <%= f.collection_select :color, Squirreltwo.select(:color).distinct, :id, :color %><br><br>

  <h2>Squirrel Activity</h2>

   <%= f.label :running %>
  <%= f.collection_select :running, Squirreltwo.select(:running).distinct, :id, :running %><br><br>

   <%= f.label :chasing %>
  <%= f.collection_select :chasing, Squirreltwo.select(:chasing).distinct, :id, :chasing %><br><br>


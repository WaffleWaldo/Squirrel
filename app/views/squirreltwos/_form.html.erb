  <%= f.collection_select :climbing, Squirreltwo.select(:climbing).distinct, :id, :climbing %><br><br>

   <%= f.label :eating %>
  <%= f.collection_select :eating, Squirreltwo.select(:eating).distinct, :id, :eating %><br><br>

   <%= f.label :foraging %>
  <%= f.collection_select :foraging, Squirreltwo.select(:foraging).distinct, :id, :foraging %><br><br>

   <%= f.label :other_activities %>
  <%= f.text_field :other_activities%>


  <h2>Squirrel Sounds</h2>

   <%= f.label :kuk %>
 <%= f.collection_select :kuk, Squirreltwo.select(:kuk).distinct, :id, :kuk %><br><br>

   <%= f.label :quaas %>
 <%= f.collection_select :quaas, Squirreltwo.select(:quaas).distinct, :id, :quaas %><br><br>

   <%= f.label :wails %>
 <%= f.collection_select :wails, Squirreltwo.select(:wails).distinct, :id, :wails %><br><br>



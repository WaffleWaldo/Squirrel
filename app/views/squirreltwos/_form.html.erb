 <%= f.collection_select :runs_from, Squirreltwo.select(:runs_from).distinct, :id, :runs_from %><br><br>

   <%= f.label :other_interactions %>
  <%= f.text_field :other_interactions%><br><br>


  <%= f.submit %>
<% end %>